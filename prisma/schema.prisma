generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(cuid())
  email     String @unique
  fristName String
  lastName  String
  password String
  token sessionToken[]
  tickets sessionTicket[]
}

model sessionToken {
  id Int @id @default(autoincrement())
  token String @unique
  userData User @relation(fields: [userId], references: [id])
  userId String
}

model Movies {
  id Int @id @default(autoincrement())
  movieName String
  decription String
  time String
  price Int
  createdAt DateTime @default(now())
  reservedSeats Int @default(0)
  Tickets sessionTicket[]
}

model row {
  id Int @id @default(autoincrement())
  rowID Int @unique
  selectedSeats String 
  tickets sessionTicket[]
}

model sessionTicket {
  ticket Int @id @unique
  userData User @relation(fields: [userId] , references: [id]) 
  userId String
  movieData Movies @relation(fields: [movieId] , references: [id]) 
  movieId Int
  useTicket Boolean @default(false)
  rowData row @relation(fields: [rowID] , references: [rowID])
  rowID Int 
}